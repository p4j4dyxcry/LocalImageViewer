<mah:MetroWindow x:Class="LocalImageViewer.DocumentWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                xmlns:localImageViewer="clr-namespace:LocalImageViewer"
                mc:Ignorable="d"
                d:DataContext="{d:DesignInstance localImageViewer:DocumentVm}"
                Title="{Binding DisplayName}">

    <WrapPanel HorizontalAlignment="Center"
               VerticalAlignment="Center">
           <Image Source="{Binding Page1.Value}"/>
           <Image Source="{Binding Page2.Value}"/>
        </WrapPanel>

</mah:MetroWindow>
